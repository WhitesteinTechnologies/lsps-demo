	<groupId>com.whitestein.lsps.app</groupId>
	<artifactId>lsps-simple-app-parent</artifactId>
	<name>LSPS: Application BOM</name>
	<packaging>pom</packaging>
	<version>0.1-SNAPSHOT</version>
	
	<properties>
		<lsps.version>3.6.1008-SNAPSHOT</lsps.version>
		<git.plugin.version>2.2.4</git.plugin.version>
	</properties>
	
	<modules>  
